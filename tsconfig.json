{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "./dist",
  
      "strict": true,
  
      // "noUnusedLocals": true,
      // "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
  
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": ["src/**/*", "index.ts"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }